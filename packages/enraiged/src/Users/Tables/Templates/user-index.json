{
    "id": "usersIndex",
    "class": "users-index shadow-1",
    "empty": "There are no users to display",
    "prefix": "users.",
    "table": "users",
    "uri": "users.index.data",
    "actions": {
        "create": {
            "class": "p-button-success",
            "icon": "pi pi-plus",
            "label": "User",
            "tooltip": "Create a new user"
        },
        "impersonate": {
            "class": "p-button-secondary",
            "icon": "pi pi-sync",
            "secure": {"method": "isNotDeleted"},
            "tooltip": "Impersonate",
            "type": "row"
        },
        "show": {
            "class": "p-button-primary",
            "icon": "pi pi-eye",
            "tooltip": "Show user",
            "type": "row"
        },
        "edit": {
            "class": "p-button-warning",
            "icon": "pi pi-pencil",
            "secure": {"method": "isNotDeleted"},
            "tooltip": "Edit user",
            "type": "row"
        },
        "delete": {
            "class": "p-button-danger",
            "confirm": "Are you certain you wish to delete this user?",
            "icon": "pi pi-trash",
            "method": "delete",
            "secure": {"method": "isNotDeleted"},
            "tooltip": "Delete user",
            "type": "row"
        },
        "restore": {
            "class": "p-button-success",
            "confirm": "Are you certain you wish to restore this user?",
            "icon": "pi pi-trash",
            "method": "patch",
            "secure": {"method": "isDeleted"},
            "tooltip": "Restore user",
            "type": "row"
        }
    },
    "columns": {
        "avatar": {
            "class": "text-center width-64",
            "custom": true,
            "exportable": false,
            "source": "avatar"
        },
        "name": {
            "label": "Name",
            "searchable": true,
            "sortable": true,
            "source": ["profiles.first_name", "profiles.last_name"]
        },
        "email": {
            "label": "Email",
            "searchable": true,
            "sortable": true
        },
        "role": {
            "class": "width-160",
            "label": "Role",
            "searchable": true,
            "source": "roles.name"
        },
        "created_at": {
            "class": "width-160",
            "label": "Created",
            "sortable": true,
            "source": "users.created_at"
        },
        "is_active": {
            "class": "text-center width-96",
            "custom": true,
            "label": "Active",
            "source": "users.is_active",
            "sortable": true
        }
    },
    "exportable": {
        "chunk": 100,
        "default": "XLSX",
        "options": ["CSV", "XLSX"],
        "uri": "users.index.export"
    },
    "filters": {
        "role_id": {
            "clearable": true,
            "default": null,
            "options": {
                "scope": "strictVisibility",
                "source": "Enraiged\\Roles\\Models\\Role",
                "type": "model"
            },
            "placeholder": "All Roles",
            "secure": {"method": "roleIs", "role": "Administrator"},
            "type": "select"
        },
        "active": {
            "clearable": true,
            "options": {
                "values": [
                    {"id": "Inactive", "name": "Inactive", "scope": "whereInactive"}
                ]
            },
            "placeholder": "Active",
            "secure": {"method": "roleAtLeast", "role": "Administrator"},
            "type": "select"
        },
        "deleted": {
            "clearable": true,
            "options": {
                "values": [
                    {"id": "Deleted", "name": "Deleted", "scope": "whereDeleted"}
                ]
            },
            "placeholder": "Not Deleted",
            "secure": {"method": "roleIs", "role": "Administrator"},
            "type": "select"
        }
    },
    "pagination": {
        "options": [5, 10, 20, 50, 100, 200, 500],
        "page": 1,
        "rows": 10
    },
    "state": true
}