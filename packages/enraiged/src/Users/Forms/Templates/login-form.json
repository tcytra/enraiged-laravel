{
    "actions": {
        "back": {
            "label": "Back"
        },
        "clear": {
            "label": "Clear"
        },
        "reset": {
            "label": "Reset"
        },
        "submit": {
            "label": "Submit"
        }
    },
    "class": "vertical shadow-1",
    "fields": {
        "personal_details_section": {
            "type": "section",
            "heading": {
                "class": "text-lg text-center",
                "body": "Update Login"
            },
            "precontent": {
                "class": "text-center mb-3",
                "body": "Use this form to update your account login."
            },
            "fields": {
                "email": {
                    "before": "md:col-2",
                    "class": "col-12 md:col-4",
                    "label": "Login Email",
                    "placeholder": "Required",
                    "required": true
                },
                "username": {
                    "after": "md:col-2",
                    "class": "col-12 md:col-4",
                    "label": "Unique Username",
                    "placeholder": "Optional",
                    "secure": {
                        "config": "enraiged.auth.allow_username_login"
                    }
                },
                "password": {
                    "before": "md:col-2",
                    "class": "col-12 md:col-4",
                    "label": "Password",
                    "placeholder": "Leave blank to keep password",
                    "type": "password"
                },
                "password_confirmation": {
                    "after": "md:col-2",
                    "class": "col-12 md:col-4",
                    "label": "Confirm Password",
                    "type": "password"
                }
            }
        }
    }
}