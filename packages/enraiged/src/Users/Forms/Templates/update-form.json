{
    "actions": {
        "back": {
            "label": "Back"
        },
        "clear": {
            "label": "Clear"
        },
        "reset": {
            "label": "Reset"
        },
        "submit": {
            "label": "Submit",
            "method": "emit"
        }
    },
    "class": "vertical shadow-1",
    "fields": {
        "administration_section": {
            "heading": "Administrative Options",
            "secure": {
                "method": "roleIs",
                "role": "Administrator"
            },
            "type": "section",
            "fields": {
                "role_id": {
                    "class": "col-6",
                    "label": "Role",
                    "options": {
                        "source": "Enraiged\\Roles\\Models\\Role",
                        "type": "model"
                    },
                    "placeholder": "Optional",
                    "type": "select"
                },
                "is_active": {
                    "class": "col-6",
                    "default": true,
                    "label": "Active",
                    "type": "switch"
                }
            }
        },
        "avatar_section": {
            "custom": true,
            "heading": "User Avatar",
            "fields": {
                "avatar": {
                    "class": "flex align-items-center justify-content-center my-3",
                    "data": "avatar.id"
                }
            },
            "type": "section"
        },
        "personal_section": {
            "heading": "Personal Details",
            "type": "section",
            "fields": {
                "salut": {
                    "after": "col-6",
                    "class": "col-6",
                    "data": "person.salut",
                    "label": "Salut",
                    "options": {
                        "source": "Enraiged\\Persons\\Enums\\Saluts",
                        "type": "enum"
                    },
                    "placeholder": "Optional",
                    "type": "select"
                },
                "first_name": {
                    "class": "col-6",
                    "data": "person.first_name",
                    "disabled": {
                        "attribute": "user.disable_name_change"
                    },
                    "label": "First Name",
                    "placeholder": "Required",
                    "required": true
                },
                "last_name": {
                    "class": "col-6",
                    "data": "person.last_name",
                    "disabled": {
                        "attribute": "user.disable_name_change"
                    },
                    "label": "Last Name",
                    "placeholder": "Required",
                    "required": true
                },
                "email": {
                    "class": "col-6",
                    "label": "Email",
                    "placeholder": "Required",
                    "required": true,
                    "value": null
                },
                "alias": {
                    "class": "col-6",
                    "data": "person.alias",
                    "label": "Alias",
                    "placeholder": "Optional"
                },
                "birthdate": {
                    "class": "col-6",
                    "data": "person.birthdate",
                    "label": "Birthday",
                    "placeholder": "Optional",
                    "type": "calendar"
                }
            }
        },
        "authentication_section": {
            "heading": "Account Password",
            "type": "section",
            "fields": {
                "password": {
                    "class": "col-6",
                    "feedback": true,
                    "label": "Password",
                    "placeholder": "Leave blank to keep password",
                    "type": "password",
                    "value": false
                },
                "password_confirmation": {
                    "class": "col-6",
                    "label": "Confirm Password",
                    "type": "password",
                    "value": false
                }
            }
        }
    }
}