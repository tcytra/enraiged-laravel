{
    "show": {
        "icon": "pi pi-user",
        "label": "Show",
        "severity": "success",
        "uriIf": {
            "condition": {"attribute": "isMyself"},
            "uri": {"route": "my.profile"}
        },
        "uriElse": {"route": "users.show", "param": "user"}
    },
    "edit": {
        "icon": "pi pi-pencil",
        "label": "Edit",
        "secure": {"method": "isNotDeleted"},
        "severity": "warning",
        "uriIf": {
            "condition": {"attribute": "isMyself"},
            "uri": {"route": "my.details"}
        },
        "uriElse": {"route": "users.edit", "param": "user"}
    },
    "avatar": {
        "action": "avatarEdit",
        "icon": "pi pi-circle",
        "label": "Avatar",
        "uriIf": {
            "condition": {"attribute": "isMyself"},
            "uri": {"route": "my.avatar"}
        },
        "uriElse": {"method": "get", "route": "users.avatar.edit", "param": "user"}
    },
    "login": {
        "action": "loginEdit",
        "icon": "pi pi-sign-in",
        "label": "Login",
        "uriIf": {
            "condition": {"attribute": "isMyself"},
            "uri": {"route": "my.login"}
        },
        "uriElse": {"route": "users.login.edit", "param": "user"}
    },
    "settings": {
        "action": "settingsEdit",
        "icon": "pi pi-cog",
        "label": "Settings",
        "uriIf": {
            "condition": {"attribute": "isMyself"},
            "uri": {"route": "my.settings"}
        },
        "uriElse": {"route": "users.settings.edit", "param": "user"}
    },
    "impersonate": {
        "class": "background-warning",
        "icon": "pi pi-sync",
        "label": "Assume",
        "secure": {"method": "isNotDeleted"},
        "uri": {"route": "users.impersonate", "param": "user"}
    },
    "delete": {
        "class": "background-danger",
        "confirm": "Are you certain you wish to delete this user?",
        "icon": "pi pi-trash",
        "label": "Delete",
        "secure": {"method": "canBeDeleted"},
        "severity": "danger",
        "uri": {"api": true, "method": "delete", "redirect": "default", "route": "users.delete", "param": "user"}
    },
    "restore": {
        "class": "background-success",
        "confirm": "Are you certain you wish to restore this user?",
        "icon": "pi pi-trash",
        "label": "Restore",
        "secure": {"method": "isDeleted"},
        "uri": {"api": true, "method": "patch", "redirect": "default", "route": "users.restore", "param": "user"}
    }
}